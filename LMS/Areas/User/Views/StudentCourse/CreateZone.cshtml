@model LMS.Models.ViewModel.StudentVM
@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<h2>Create</h2>
<link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.css">
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>


    <div class="main" >
        <div class="container">
            <div class="signup-content">
                <form method="post" asp-action="CreateZone" asp-controller="StudentCourse" enctype="multipart/form-data" id="register-form">
                    <div class="form-group">
                        <label for="name">Name  :</label>
                        <input type="text" asp-for="Zone.Name" id="name" required />
                    </div>
                    <div class="form-group">
                        <label for="name"> Description :</label>
                        <input type="text" asp-for="Zone.Description" id="name" />
                    </div>
                    <div class="form-group">
                        <label for="email">File</label>
                        <input type="file"  name="files" multiple class="form-control" />
                    </div>


                    @Html.DropDownListFor(x => x.StudentList, Model.Students.Select(x => new SelectListItem { Text = x.Name, Value = x.Name.ToString() })
                             , new { @class = "form-control chosen-select", @multiple = true })

                    <input type="submit" name="name" value="Submit" />
                    </form>
            </div>

        </div>
    </div>

<script>
    $('.chosen-select').chosen();
</script>
