@model LMS.Models.Teacher

@{
    ViewData["Title"] = "Detalis";
    Layout = null;
}

<h2>Detalis</h2>

<hr />

<link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/Register/css/style.css">
<form method="post" asp-action="Details" enctype="multipart/form-data" id="register-form">
    <div class="main">
        <div class="container">
            <div class="signup-content">
                <div class="signup-img">
                    <img src="@Model.image" alt="">
                </div>
                <div class="signup-form">

                    <h2>student registration form</h2>

                    <div class="form-group">
                        <label for="name">Name :</label>

                        <input asp-for="Name" disabled type="text" name="Name" id="name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input asp-for="Email" disabled type="email" name="Email" id="email" />
                    </div>
                    <div class="form-group">
                        <label for="address">Address :</label>
                        <input asp-for="Address" disabled type="text" name="Address" id="address" required />
                    </div>

                    <div class="form-group">
                        <label for="address">phone :</label>
                        <input asp-for="phone" disabled type="tel" name="phone" id="address" required />
                    </div>

                    <div class="form-group">
                        <label for="address">Gender :</label>
                        <input asp-for="Gender" disabled type="text" name="Gender" id="address" required />
                    </div>

                    <div class="form-group">
                        <label for="birth_date">DOB :</label>
                        <input asp-for="BirthDay" disabled type="date" name="BirthDay" id="birth_date">
                    </div>

                    <div class="form-group">
                        <label for="pincode">National Id :</label>
                        <input asp-for="NationalId" disabled type="text" name="NationalId" id="pincode">
                    </div>
                    <div class="form-group">
                        <label for="pincode">status :</label>
                        <input asp-for="status" disabled type="text" name="status" placeholder="Active Or DisActive" id="pincode">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Section</label>
                        <select asp-for="@Model.Level.Stage.SectionId" id="SectionId" asp-items="@ViewBag.Section" disabled class="form-control">
                            <option value="">Select your level</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Stage</label>
                        <select asp-for="@Model.Level.StageId" id="StageId" asp-items="@ViewBag.Stage" disabled class="form-control">
                            <option value="">Select your level</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Level</label>
                        <select asp-for="@Model.LevelId" name="Level" id="LevelId" asp-items="@ViewBag.level" disabled class="form-control">
                            <option value="">Select your level</option>
                        </select>
                    </div>

                    <div class="form-submit">
                        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary text-white">Edit</a>
                        <input type="submit" asp-action="Index" value="Back To List" class="submit" name="reset" id="reset" />
                    </div>

                </div>
            </div>
        </div>

    </div>
</form>

<--!register>></--!register>
<script src="~/Register/vendor/jquery/jquery.min.js"></script>
<script src="~/Register/js/main.js"></script>



