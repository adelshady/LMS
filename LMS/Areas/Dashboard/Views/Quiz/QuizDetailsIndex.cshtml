@model IEnumerable<LMS.Models.QuizDetails>
@{
    ViewData["Title"] = "QuizDetailsIndex";
}

<br />
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Quiz Details List</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="QuizDetailsCreate" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; Create New </a>
            </p>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border" style="max-width: 138%">
            <tr>
                <th>
                    QuizDetails Name
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    received Time
                </th>
                <th>
                    Chapter Name
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(x => item.Name)
            </td>
            <td>
                @Html.DisplayFor(x => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(x => item.receivedTime)
            </td>
            <td>
                @Html.DisplayFor(x => item.Chapter.Name)
            </td>
            <td style="width: 252px">
                <div class="btn-group" role="group">
                    <a class="btn btn-primary text-white" asp-action="QuizDetailsEdit" asp-route-id="@item.ID">
                        Edit
                        <i class="fas fa-edit"></i>
                    </a>

                    <a class="btn btn-success text-white" asp-action="QuizDetailsDetalis" asp-route-Id="@item.ID">
                        Detalis
                        <i class="fas fa-list-alt"></i>
                    </a>

                    <a class="btn btn-danger text-white" asp-action="QuizDetailsDelete" asp-route-Id="@item.ID">
                        Delete
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>

            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <p>no QuizDetails list</p>
    }
</div>


