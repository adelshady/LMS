@model Register
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/Register/css/style.css">

<div class="main">
    <div class="container">
        <div class="signup-content">
            <div class="signup-img">
                <img src="~/Register/images/signup-img.jpg" alt="">
            </div>
            <div class="signup-form">
                <form method="post" asp-action="Register"  enctype="multipart/form-data" id="register-form">
                    <h2>student registration form</h2>

                    <div class="form-group">
                        <label for="name">Name :</label>
                        <input type="text" name="FullName" id="name" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" />
                    </div>
                    <div class="form-group">
                        <label for="address">Password :</label>
                        <input type="password" name="Password" id="address" required />
                    </div>
                    <div class="form-group">
                        <label for="address">Address :</label>
                        <input type="text" name="Address" id="address" required />
                    </div>

                    <div class="form-group">
                        <label for="address">phone :</label>
                        <input type="tel" name="phone" id="address" required />
                    </div>

                    <div class="form-group">
                        <label for="address">Gender :</label>
                        <input type="text" name="Gender" id="address" required />
                    </div>

                    <div class="form-group">
                        <label for="birth_date">DOB :</label>
                        <input type="date" name="BirthDay" id="birth_date">
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="image" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input type="file" name="files" multiple class="form-control" />
                        </div>
                        <span asp-validation-for="image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="pincode">National Id :</label>
                        <input type="text" name="NationalId" id="pincode">
                    </div>

