@model IEnumerable<LMS.Models.Message>
@{
    ViewData["Title"] = "Chat";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <!--  This file has been downloaded from bootdey.com on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title>chat app </title>
    <link href="~/css/Chat.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/sitechat.css" rel="stylesheet" />
</head>
<body>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <div class="container" id="chat">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app">
                    <div class="chat">

                        @if (Model != null)
                        {
                            foreach (var message in Model.OrderBy(x => x.DateInserted))
                            {
                                <input hidden asp-for="@message.IDMessage" />
                                <input hidden asp-for="@message.FromUserId" />
                                <input hidden asp-for="@message.ToUserId" />
                                <div class="chat-history">
                                    <ul class="m-b-0">
                                        <li class="clearfix">
                                            <div class="message-data text-right">

                                                <span class="message-data-time">@message.DateInserted</span>
                                            </div>
                                            <div class="message other-message float-right">@message.FromUser.Name</div>
                                            <div class="message other-message float-right">@message.Subject</div>
                                        </li>
                                    </ul>
                                </div>

                            }
                        }
                        <div class="chat-message clearfix">
                            <form asp-action="CreateChat" data-ajax-begin="clearInputField"
                                  data-ajax-complete="" data-ajax-failure="alert('Fail')"
                                  data-ajax-success="sendMessage" data-ajax="true" data-ajax-method="Post">
                                <div class="form-group">
                                    <input class="form-control" name="Subject" id="messageText" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Send" class="btn btn-primary" id="submitButton" />

                                </div>

                                @*<div class="input-group mb-0">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-send"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter text here...">
                </div>*@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const userName = "@ViewBag.CurrentUserName";
    </script>
    <script src="~/js/signrReqHandler.js"></script>
    <script src="~/js/signalrReqHandler.js"></script>
    <script src="~/js/sitechat.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/signalr/signalr.js"></script>
    <script type="text/javascript"></script>
</body>
</html>


















